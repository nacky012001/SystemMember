<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header"><%=I18n.t(:preview_members, scope: :members)%></h1>
  </div>
</div>

<div class="panel panel-default">
  <div class="panel-heading">
    <%=I18n.t(:import_members, scope: :members)%>
  </div>
  <div class="panel-body">
    <div class="row">
      <div class="col-lg-12">
        <table id="members_preview" class="display">
          <thead>
              <tr>
                  <th>Name</th>
                  <th>Position</th>
                  <th>Office</th>
                  <th>Age</th>
                  <th>Start date</th>
                  <th>Salary</th>
              </tr>
          </thead>
          <tfoot>
              <tr>
                  <th>Name</th>
                  <th>Position</th>
                  <th>Office</th>
                  <th>Age</th>
                  <th>Start date</th>
                  <th>Salary</th>
              </tr>
          </tfoot>
          <tbody>
              <tr>
                  <td>Tiger Nixon</td>
                  <td>System Architect</td>
                  <td>Edinburgh</td>
                  <td>61</td>
                  <td>2011/04/25</td>
                  <td>$320,800</td>
              </tr>
          </tbody>
      </table>
      </div>
    </div>
    <div class="row">
      <div class="col-lg-12">
        <%= form_tag upload_members_path, multipart: true do %>
          <%= hidden_field_tag "member_files[]", params[:files] %>

          <%= submit_tag I18n.t(:import_members, scope: :members), :class => "btn btn-primary" %> 
          <%= link_to I18n.t(:cancel_member, scope: :members), members_path, :class => "btn btn-default" %>
        <% end %>
      </div>
    </div>
  </div>
</div>

<script>
  $(document).ready(function() {
      $('#members_preview').DataTable();
  } );
</script>
