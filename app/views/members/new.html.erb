<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header"><%=I18n.t(:new_member, scope: :members)%></h1>
  </div>
</div>

<div class="panel panel-default">
  <div class="panel-heading">
    <%=I18n.t(:basic_information, scope: :members)%>
  </div>
  <div class="panel-body">
    <div class="row">
      <div class="col-lg-6">
        <%= semantic_form_for @member do |f| %>
          <%= f.inputs :name => I18n.t(:basic_information, scope: :members) do %>
            <%= f.input :name %>
            <%= f.input :email, :as => :email %>
            <%= f.input :age, :as => :number %>
            <%= f.input :gender, :as => :select, :collection => [[I18n.t(:male, scope: :members), :male], [I18n.t(:female, scope: :members), :female]] %>
          <% end %>

          <%= f.actions do %>
            <%= f.action :submit, :as => :button, :label => I18n.t(:create_member, scope: :members), :button_html => {:class => "btn btn-primary"} %>
            <%= f.action :cancel, :as => :link, :label => I18n.t(:cancel_member, scope: :members), :button_html => {:class => "btn btn-default"} %>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>
